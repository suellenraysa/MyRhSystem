@using System.ComponentModel.DataAnnotations
@using MyRhSystem.APP.Shared.Models
@inherits ComponentBase

<div class="mb-4">
    <h5 class="mb-3">
        <i class="bi bi-briefcase-fill text-success"></i>
        Informações Comerciais
    </h5>

    <div class="mb-3">
        <label class="form-label fw-semibold">Setor *</label>
        <InputText class="form-control" @bind-Value="Model.Sector" />
        <ValidationMessage For="@(() => Model.Sector)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Tamanho da Empresa *</label>
        <InputText class="form-control" @bind-Value="Model.Size" />
        <ValidationMessage For="@(() => Model.Size)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Ano de Fundação *</label>
        <InputNumber TValue="int" class="form-control" @bind-Value="Model.FoundingYear" />
        <ValidationMessage For="@(() => Model.FoundingYear)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Faturamento Mensal *</label>
        <InputText class="form-control" @bind-Value="Model.MonthlyRevenue" />
        <ValidationMessage For="@(() => Model.MonthlyRevenue)" />
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public BusinessInfoModel Model { get; set; } = default!;
}
