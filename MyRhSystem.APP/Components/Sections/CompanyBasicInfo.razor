@using System.ComponentModel.DataAnnotations
@inherits ComponentBase

<div class="mb-4">
    <h5 class="mb-3">
        <i class="bi bi-info-circle-fill me-2 text-success"></i>
        Informações Básicas
    </h5>

    <div class="mb-3">
        <label class="form-label fw-semibold">Razão Social *</label>
        <input class="form-control" type="text" value="Empresa Exemplo LTDA" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">CNPJ *</label>
        <input class="form-control" type="text" value="00.000.000/0000-00" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Telefone *</label>
        <input class="form-control" type="text" value="(11) 99999-9999" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Email *</label>
        <input class="form-control" type="email" value="contato@empresa.com.br" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>
</div>


@code {
    [Parameter, EditorRequired]
    public CompanyBasicInfoModel Model { get; set; } = default!;
}
