@using System.ComponentModel.DataAnnotations
@using MyRhSystem.APP.Shared.Models
@inherits ComponentBase

<div class="mb-4">
    <h5 class="mb-3">
        <i class="bi bi-bank text-success"></i>
        Informações Bancárias
    </h5>

    <div class="mb-3">
        <label class="form-label fw-semibold">Banco *</label>
        <InputText class="form-control" @bind-Value="Model.Bank" />
        <ValidationMessage For="@(() => Model.Bank)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Tipo de Conta *</label>
        <InputText class="form-control" @bind-Value="Model.AccountType" />
        <ValidationMessage For="@(() => Model.AccountType)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Agência *</label>
        <InputText class="form-control" @bind-Value="Model.Agency" />
        <ValidationMessage For="@(() => Model.Agency)" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Conta *</label>
        <InputText class="form-control" @bind-Value="Model.Account" />
        <ValidationMessage For="@(() => Model.Account)" />
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public BankingInfoModel Model { get; set; } = default!;
}
