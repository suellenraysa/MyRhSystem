@using System.ComponentModel.DataAnnotations
@using MyRhSystem.APP.Shared.Models
@inherits ComponentBase

<div class="mb-4">
    <h5 class="mb-3">
        <i class="bi bi-person-badge-fill text-success"></i>
        Representante Legal
    </h5>

    <div class="mb-3">
        <label class="form-label fw-semibold">Nome Completo *</label>
        <input class="form-control" type="text" value="João da Silva" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">CPF *</label>
        <input class="form-control" type="text" value="123.456.789-00" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Telefone *</label>
        <input class="form-control" type="text" value="(11) 91234-5678" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">E-mail *</label>
        <input class="form-control" type="email" value="joao.silva@empresa.com.br" />
        <div class="text-danger small">Mensagem de validação</div>
    </div>
</div>


@code {
    [Parameter, EditorRequired]
    public LegalRepresentativeModel Model { get; set; } = default!;
}
